@page
@model IndexModel
@{
    ViewData["Title"] = "Login page";
}

<div class="container">
    <div class="form-wrapper">
        <h3>Login</h3>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.Account.Username" class="control-label">Username</label>
                <input asp-for="@Model.Account.Username" class="form-control" />
                <span asp-validation-for="@Model.Account.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Account.Password" class="control-label">Password</label>
                <input asp-for="@Model.Account.Password" class="form-control" type="password" />
                <span asp-validation-for="@Model.Account.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn" />
            </div>
        </form>
    </div>
</div>