@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
	<form method="post">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="form-group">
			<label asp-for="@Model.account.Username" class="control-label"></label>
			<input asp-for="@Model.account.Username" class="control-input" />
			<span asp-validation-for="@Model.account.Username" class="text-danger" />
		</div>

		<div class="form-group">
			<label asp-for="@Model.account.Password" class="control-label"></label>
			<input asp-for="@Model.account.Password" class="control-input" type="password" />
			<span asp-validation-for="@Model.account.Password" class="text-danger" />
		</div>

		<div class="control-group">
			<input type="submit" value="Login" class="btn btn-primary" />
		</div>
	</form>
</div>
