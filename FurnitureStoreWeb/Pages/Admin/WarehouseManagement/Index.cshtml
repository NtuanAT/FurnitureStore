@page
@model FurnitureStoreWeb.Pages.Admin.WarehouseManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Warehouse Management</h1>

<a href="/Admin/ProductManagement/Index" class="btn btn-primary">Product Management</a>
<a href="/Admin/InStoreProductManagement/Index" class="btn btn-primary">In-Store Product Management</a>
<a href="/Admin/InWarehouseProductManagement/Index" class="btn btn-primary">Warehouse Product Management</a>
<a href="/Admin/WarehouseManagement/Index" class="btn btn-primary">Warehouse Management</a>
<a href="/Admin/StoreManagement/Index" class="btn btn-primary">Store Management</a>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Warehouse[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warehouse[0].Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Warehouse) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.WareHouseID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.WareHouseID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.WareHouseID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
