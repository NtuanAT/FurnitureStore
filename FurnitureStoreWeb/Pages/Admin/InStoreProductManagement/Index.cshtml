@page
@model FurnitureStoreWeb.Pages.Admin.InStoreProductManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>In Store Product Management</h1>
<h1>@Model.storeName</h1>

<a href="/Admin/ProductManagement/Index" class="btn btn-primary">Product Management</a>
<a href="/Admin/InStoreProductManagement/Index" class="btn btn-primary">In-Store Product Management</a>
<a href="/Admin/InWarehouseProductManagement/Index" class="btn btn-primary">Warehouse Product Management</a>
<a href="/Admin/WarehouseManagement/Index" class="btn btn-primary">Warehouse Management</a>
<a href="/Admin/StoreManagement/Index" class="btn btn-primary">Store Management</a>

<form method="post">
    Product Name: <select asp-for="searchInStoreProduct.Product.ProductName" class="form-control" asp-items="ViewBag.ProductName" required >
        <option value="">-- Select a product --</option>
    </select>
    <button type="submit">Search</button>
</form>


<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InStoreProduct[0].Product.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InStoreProduct[0].Product.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InStoreProduct[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InStoreProduct[0].Product.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InStoreProduct[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.InStoreProduct)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.InStoreProductID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.InStoreProductID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.InStoreProductID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
