@page
@model FurnitureStoreWeb.Pages.Admin.InWarehouseProductManagement.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>InStoreProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InStoreProduct.InStoreProductID" />
            <div class="form-group">
                <label asp-for="InStoreProduct.ProductID" class="control-label"></label>
                <input asp-for="InStoreProduct.ProductID" class="form-control" readonly/>
                <span asp-validation-for="InStoreProduct.ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InStoreProduct.Product.ProductName" class="control-label"></label>
                <input asp-for="InStoreProduct.Product.ProductName" class="form-control" readonly />
                <span asp-validation-for="InStoreProduct.Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InStoreProduct.BelongTo" class="control-label"></label>
                <select asp-for="InStoreProduct.BelongTo" class="form-control" asp-items="ViewBag.WarehouseID"></select>
                <span asp-validation-for="InStoreProduct.BelongTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InStoreProduct.Quantity" class="control-label"></label>
                <input asp-for="InStoreProduct.Quantity" class="form-control"  min="0"/>
                <span asp-validation-for="InStoreProduct.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InStoreProduct.Status" class="control-label"></label>
                <select asp-for="InStoreProduct.Status" class="form-control" asp-items="ViewBag.Status"></select>
                <span asp-validation-for="InStoreProduct.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
